<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_book_store_activity_form" model="ir.ui.view">
            <field name="name">活动</field>
            <field name="model">book_store.activity</field>
            <field name="arch" type="xml">
                <form string="" class="">
                    <header>
                        <button name="button_test" type="object" string="测试"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="名称" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="lines">
                                <tree editable="bottom">
                                    <field name="book"/>
                                    <field name="special"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_books_store_activity_tree" model="ir.ui.view">
            <field name="name">活动</field>
            <field name="model">book_store.activity</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_book_store_activity" model="ir.actions.act_window">
            <field name="name">活动</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">book_store.activity</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_book_store_activity" name="活动" parent="book_store.menu_root" action="action_book_store_activity" />
</data>
</odoo>